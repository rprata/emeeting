<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap Core CSS -->
    <link href="bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="simple-sidebar.css" rel="stylesheet">

    <link href="signin.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                	<a href="#">
                  		emeeting
                  	</a>
                </li>
                <li>
                    <a href="/events">Principal</a>
                </li>
                <% if current_user.is_admin == 1 %>
                <li>
                    <a href="/add">Adicionar Reunião</a>
                </li>
                <% end %>
                <% if current_user.is_admin == 1 %>
                <li>
                  <%= link_to "Adicionar Novo Executivo", '/signup' %>
                </li>
                <li>
                  <%= link_to "Listar Executivos", '/list' %>
                </li>
                <% end %>
                <li>
                    <%= link_to "Sair", '/logout' %>
                </li>
            </ul>
        </div>

        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default btn-sm" id="menu-toggle"><<</a>
                        <h1>Adicionar Novo Executivo</h1>
					  	<% if flash[:error] %>
					      <div class="alert alert-danger">
					        <strong><%= flash[:error] %></strong>
					      </div>
					    <% end %>
                        <% if flash[:success] %>
                          <div class="alert alert-success">
                            <strong><%= flash[:success] %></strong>
                          </div>
                        <% end %>
					    <br>
					    <br>
					      <div class="form-signin">
					        <%= form_for @user, :html => { :id => "signupForm"}  do |f| %>
					          <%= f.email_field :email, :placeholder => "Email", class: "form-control" %>
					          <%= f.password_field :password, :placeholder => "Password" , class: "form-control"%>
					          <%= f.submit "Criar Usuário", class: "btn btn-primary btn-block" %>
					        <% end %>
					    </div>


					    <%= javascript_include_tag "jquery.js" %>
					    <%= javascript_include_tag "jquery.validate.js" %>

					    <!-- Bootstrap Core JavaScript -->
					    <%= javascript_include_tag "bootstrap.min.js" %>

					    <script>
					        $(document).ready(function() {
					          $("#signupForm").validate({
					            rules: {
					              "user[email]": {
					                required: true,
					                email: true,
					              },
					              "user[password]": {
					                required: true,
					                minlength: 6
					              }
					            }
					           });
					       });

					    </script>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>

